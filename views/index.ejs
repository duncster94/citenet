<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>CiteNet</title>
    <!-- Materialize CSS -->
    <link rel="stylesheet" href="stylesheets/materialize.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.15/css/mdb.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700" rel="stylesheet">
    <!-- Custom styles -->
    <link rel="stylesheet" href="stylesheets/front-page.css" />
    <link rel="stylesheet" href="stylesheets/selectize.css" />
    <link rel="stylesheet" href="stylesheets/selectize-option.css" />
    <link rel="stylesheet" href="stylesheets/mdc.button.css" />
    <link rel="stylesheet" href="stylesheets/tippy-style.css" />
    <link rel="stylesheet" href="stylesheets/vex.css" />
    <link rel="stylesheet" href="stylesheets/vex-theme-wireframe.css" />
    <link rel="stylesheet" href="stylesheets/vex-modal-style.css" />
    <!-- Add support for selectize on IE 9 -->
    <!--[if lt IE 9]><script src="http://cdnjs.cloudflare.com/ajax/libs/es5-shim/2.0.8/es5-shim.min.js"></script><![endif]-->
</head>

<body>
    <!--Main Navigation-->
    <header>
    </header>
    <!--Main Navigation-->

    <!--Main Layout-->
    <main>

        <!-- D3 Canvas -->
        <svg id="network" style="display: none;"></svg>

        <div class="container">
            <!-- Main Page Content -->
            <div id="front-page" class="text-center" style="margin-top:12.5em;">
                <!-- Title -->
                <h1 class="card-title h1 text-center animated fadeIn slow">CiteNet</h1>
                <!-- Selectize Input -->
                <span id="selectize-span">
                 <input id="selectize" type="text" name="selectize-form-input" aria-label="Search" required>
                 <button id="selectize-go-button" type="text" class="btn peach-gradient btn-block" disabled>
                   <i id = "search-icon" class="fas fa-search"></i>
                 </button>
               </span>
                <!-- Subtitle -->
                <p class="orange-text my-4 font-weight-bold text-center animated fadeIn delay-1s">A powerfully intuitive way to search the scientific literature</p>
            </div>

            <!-- FAB -->
            <div id="post-layout-buttons" class="fixed-action-btnm click-to-toggle" style="display: none;">
                <a class="btnm-floating btnm-large red">
                    <i class="fas fa-bars"></i>
                </a>
                <ul>
                    <li>
                        <a id="home-button" class="btnm-floating tooltipped yellow darken-4" data-position="left" data-tooltip="Go home">
                            <i class="fa fa-home"></i></a>
                    </li>
                    <li>
                        <a id="refine-button" class="btnm-floating tooltipped yellow darken-3" data-position="left" data-tooltip="Refine search">
                            <i class="fas fa-sync-alt"></i></a>
                    </li>
                    <li>
                        <a id="animate-rank-button" class="btnm-floating tooltipped yellow darken-2" data-position="left" data-tooltip="Rank results">
                            <i class="fas fa-grip-horizontal"></i></a>
                    </li>
                </ul>
            </div>
        </div>

    </main>
    <!--Main layout-->

    <!--Footer-->
    <footer>
    </footer>
    <!--Footer-->

    <!-- Custom script import -->
    <script src="javascript/main-bundle.js"></script>
    <script type="text/javascript" src="javascript/materialize.min.js"></script>
</body>

</html>
